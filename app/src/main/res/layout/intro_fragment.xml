<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/intro_image"/>

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/large_spacing"
        android:paddingEnd="@dimen/large_spacing"
        android:paddingStart="@dimen/large_spacing"
        android:paddingTop="@dimen/large_spacing">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/noteworthy"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/large_spacing"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="59sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/noteworthy"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/large_spacing"
            android:text="@string/intro_text"
            android:textColor="@android:color/white"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/intro_start_button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/intro_start"/>
    </FrameLayout>

</FrameLayout>